#this is a short run of what to enable and disable to make your pi secure

!#bin/bash

sudo service bluetooth stop 


sudo adduser #rackpi320(Pi model, amt. of Mem, rack0 or desk1)

if {ifconfig -a | grep "ip = 192.168.2.0 /24"

  then: 
      #Lets update the repos and upgrade
      sudo apt-get update -y && sudo apt upgrade -y
      
      
      
      #add "origin=Raspbian,codename=${distro_codename},label=Raspbian";
        "origin=Raspberry Pi Foundation,codename{distro_codename},label=Raspberry Pi Foundation";
        to /etc/apt/apt.conf.d/50unattended-upgrades - insert into origin section. 
      
     
     
      
      
      }
      
